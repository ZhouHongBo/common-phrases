{
  "manifest_version": 2,
  "name": "常用短语",
  "description": "从鼠标右键菜单中输入常用短语",
  "version": "1.0",
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png",
    "16": "img/icon16.png"
  },
  "permissions": ["storage", "contextMenus", "tabs", "*://*/*"],
  "browser_action": {
    "default_icon": "img/icon16.png",
    "default_popup": "src/popup.html"
  },
  "background": {
    "scripts": ["src/eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js", "src/jquery-3.5.1.min.js"]
    }
  ]
}